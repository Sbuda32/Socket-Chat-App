doctype html
html
    head
        title Web-Chat-App
        link(rel="stylesheet", href="/css/stylesheet.css", type="text/css")
        block scripts
            script(src="/js/jquery-3.4.0.js")
            script(src="socket.io/socket.io.js")
            script(src="/js/client-side.js")
                
    body
        div#header
            h1 Chat App

        div#welcome-message
            p.welcome-text Welcome to chat app.
        
        div#messages 

        form(action="" class="message-form" method="POST")
            input#text-box(type="text", name="text-box", placeholder="Type message here")
            input#send-button(type="button", value=">")
        
        

           

        

        
                    