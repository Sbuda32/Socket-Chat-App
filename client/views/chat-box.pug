doctype html
html
    head
        title Web-Chat-App
        link(rel="stylesheet", href="/css/stylesheet.css", type="text/css")
        block scripts
            script(src="/js/jquery-3.4.0.js")
            script(src="socket.io/socket.io.js")
            script(src="/js/client-side.js")
                
    body
        div#header
            h1 Chat App
        
        div#messages
            .message-box 
                .user-pic
                .text-message 

        form(action="" class="message-form")
            input#text-box(type="text", name="text-box", placeholder="Type message here")
            input#send-button(type="button", value=">")
        
        

        block scripts
            script(src="https://unpkg.com/react@16/umd/react.development.js" crossorigin)
            script(src="https://unpkg.com/react-dom@16/umd/react-dom.development.js" crossorigin)
            script(src="/js/message-box.js")

        

        
                    